{
  "buildCommand": "pip install -r requirements.txt",
  "devCommand": "python3 humanoid_api.py",
  "installCommand": "pip install -r requirements.txt",
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/?(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "MONGODB_URI": "@MONGODB_URI",
    "FLASK_ENV": "production"
  }
}
